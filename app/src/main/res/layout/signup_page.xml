<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <!-- FrameLayout for ImageView and TextView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="match_parent"
          android:layout_height="230dp"
          android:src="@drawable/top_background"
          android:layout_marginTop="-20dp" />

      <TextView
          android:layout_width="164dp"
          android:layout_height="84dp"
          android:layout_marginTop="30dp"
          android:layout_marginStart="20dp"
          android:text="Hii, You are safe now !!"
          android:textColor="@color/black"
          android:textSize="30sp"
          android:textStyle="bold" />
    </FrameLayout>

    <!-- Sign Up Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SIGN UP"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill the following details"
        android:layout_gravity="center"
        android:layout_marginTop="5dp" />

    <!-- Full Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="Full Name"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/textfield"
        android:hint="Uday..."
        android:maxLines="1"
        android:inputType="text"
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp" />

    <!-- Contact -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Contact"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/textfield"
        android:maxLines="1"
        android:inputType="phone"
        android:hint="91+"
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp" />

    <!-- Aadhar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Aadhar"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/aadhar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/textfield"
        android:maxLines="1"
        android:inputType="phone"
        android:hint="9878..."
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp" />

    <!-- Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Email"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/textfield"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:hint="batman@gmail..."
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp" />

    <!-- City -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="City"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/textfield"
        android:maxLines="1"
        android:hint="Bhubaneswar"
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp" />

    <!-- Location (Editable) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Location"
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/textfield"
        android:maxLines="1"
        android:text="Click me to add location"
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:gravity="start|center_vertical"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/signupbutt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/login_submit_butt"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="20dp"/>
  </LinearLayout>
</ScrollView>
